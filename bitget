import requests

def get_usdt_pairs():
    url = "https://api.bitget.com/api/v2/mix/market/tickers?productType=COIN-FUTURES"
    try:
        response = requests.get(url)
        response.raise_for_status()  # Check for HTTP errors
        
        # Print the entire response to debug
        print("Full API Response:", response.json())

        data = response.json()

        # Ensure 'data' is present and is a list
        if 'data' in data and isinstance(data['data'], list):
            # Filter for USDT trading pairs
            usdt_pairs = [item['symbol'] for item in data['data'] if 'USDT' in item['symbol']]
            return usdt_pairs
        else:
            print("Unexpected data format.")
            return []

    except requests.exceptions.RequestException as e:
        print(f"Error fetching data: {e}")
        return []
    except ValueError as e:
        print(f"Error parsing JSON: {e}")
        return []

# Fetch and print USDT trading pairs
usdt_pairs = get_usdt_pairs()
print("USDT Trading Pairs on Bitget:", usdt_pairs)
